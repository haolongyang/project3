
@{
    ViewBag.Title = "OrderHistory";
}

<h2>OrderHistory</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">History Of Orders</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer Name</th>
                            <th>Number Of Dishes</th>
                            <th>Cost</th>
                            <th>Date of Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in ViewBag.Orders)
                        {
                            <tr>
                                <td>@order.ID</td>
                                <td>@order.CustomerName</td>
                                <td>@order.NumberOfDishes</td>
                                <td>@order.Cost</td>
                                <td>@order.OrderDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>