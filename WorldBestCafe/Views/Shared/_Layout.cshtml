<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - World Best Cafe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <div style="height: 50px;">
            <div style="float:left;">
                @Html.ActionLink("World Best Cafe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div style="float:right; padding-top:15px; padding-right:20px;">
                <ul style="white-space:nowrap;list-style:none;">
                    <li style="display:inline; padding:20px 5px 0px 5px;">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="display:inline; padding:20px 5px 0px 5px;">@Html.ActionLink("About", "About", "Home")</li>
                    <li style="display:inline; padding:20px 5px 0px 5px;">@Html.ActionLink("Menu", "Menu", "Home")</li>
                    <li style="display:inline; padding:20px 5px 0px 5px;">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li style="display:inline; padding:20px 5px 0px 5px;">@Html.ActionLink("History Of Orders", "OrderHistory", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - World Best Cafe</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
